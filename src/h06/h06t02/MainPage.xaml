<Page
    x:Class="H06T02.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:H06T02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="trucksButton" Content="Trucks" HorizontalAlignment="Left" Margin="325,313,0,0" VerticalAlignment="Top" Width="70" Click="truckClick"/>
        <Button x:Name="carsButton" Content="Cars" HorizontalAlignment="Left" Margin="414,313,0,0" VerticalAlignment="Top" Width="70" Click="carClick"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="503,313,0,0" VerticalAlignment="Top" Width="70" Click="clearClick"/>
        <TextBlock x:Name="trucksTextBlock" HorizontalAlignment="Left" Margin="325,370,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70" TextAlignment="Center"/>
        <TextBlock x:Name="carsTextBlock" HorizontalAlignment="Left" Margin="414,370,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70" TextAlignment="Center"/>

    </Grid>
</Page>
